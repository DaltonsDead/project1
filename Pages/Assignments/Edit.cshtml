@page
@model Project1_ASP.Pages.Assignments.EditModel
@{
}

@if (Model.error.Length > 0)
{
    <div class="alert alert-dismissible alert-warning fade show" role="alert">
        <strong>@Model.error</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Owners First Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="OwnerFirst" value="@Model.assignmentInfo.OwnerFirst" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Owners Last Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="OwnerLast" value="@Model.assignmentInfo.OwnerLast" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Address" value="@Model.assignmentInfo.Address" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Phone" value="@Model.assignmentInfo.Phone" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Problem Description:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ProblemDesc" value="@Model.assignmentInfo.ProblemDesc" />
        </div>
    </div>
    <div class="row mb-3">
        <labelclass="col-sm-3 col-form-label">Employee:</label>
            <div class="col-sm-6">
                <select name="Completed">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
    </div>

    @if (Model.success.Length > 0)
    {
        <div class="alert alert-dismissible alert-success fade show" role="alert">
            <strong>@Model.success</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="ofset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <button class="btn btn-danger" href="/" role="button">Cancel</button>
        </div>
    </div>
</form>
